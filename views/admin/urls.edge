		  user['BodyID']=$('#BodyID').val().trim();
   	  user['changefreq']=$('#changefreq').val().trim();
   	  user['lang']=$('#lang').val().trim());
	 
   	  //appening to jput variable
   	  /*
   		 update(index,newdata)
   	  */
   	  jPut.users.update($('#update').attr('data-id'),user);
   
   	  $('#save,#update').toggle();
   	  SendData(2,user,user['Id']);
