<script lang="javascript">
  $(document).ready(function () {
    SetTitle('Websites'); 
});
$(function(){
    var orders = new DevExpress.data.CustomStore({
        key: "Id",
        load: function (loadOptions) {
            return ReadData("/admin/Websites/list/1",loadOptions);           
        },
        insert: function(values) {
            return SendDataTable( "/admin/Websites/", JSON.stringify(values),null);
        },
        update: function(key, values) {
            return SendDataTable( "/admin/Websites/", JSON.stringify(values),key);
        },
        remove: function(key) {
            return SendDataTable( "/admin/Websites/d/", JSON.stringify({key:key}),key);
        }

    });
    
    $("#gridContainer").dxDataGrid({
        dataSource: {
            store: orders
        },
        editing: {
            mode: "form",
            allowAdding: true,
            allowUpdating: true,
            allowDeleting: true
        },
        columnAutoWidth: true,
        showBorders: true,
        remoteOperations: {
            sorting: false,
            paging: true
        },
        paging: {
            pageSize: 24
        },
        searchPanel: {
            visible: true,
        },
        columns: [
            {
            dataField: "Id",
            dataType: "string",
            visible:false, formItem: { visible:false }
        },
        {
            dataField: "Website",
            dataType: "string",
                validationRules: [{ type: "required" }],
                caption:"Hostname (ndg.yt)"
        },
        {
            dataField: "Note",
            dataType: "string",
            caption:"Note"
        }
          
        ],
        onRowUpdating: function(options) { 
             options.newData = $.extend({}, options.oldData, options.newData); 
        }
    }).dxDataGrid("instance");
});
</script>


<div class="boxed">
               
